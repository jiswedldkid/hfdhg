import random

# 生成1到100的随机数字
secret_number = random.randint(1, 100)
print("欢迎玩猜数字游戏！我在想一个1到100之间的数字。")

while True:
    # 获取用户输入
    guess = int(input("请输入你的猜测："))
    
    if guess > secret_number:
        print("太大了！")
    elif guess < secret_number:
        print("太小了！")
    else:
        print(f"恭喜！你猜对了！数字就是 {secret_number}")
        break
